/* Colors */
$brand-primary: #2A9FD6;
$brand-success: #77B300;
$brand-warning: #FF8800;
$brand-danger: #CC0000;
$brand-info: #9933CC;

/* Scaffolding */
$body-bg: #1a1a1a;
$text-color: #fff;
$link-color: #808080;

/* Typography */
$font-family-sans-serif: "Open Sans", sans-serif;

/* Components */
$border-radius-base: 0;
$border-radius-large: 0;
$border-radius-small: 0;

/* Selection */
$selection-bg: #808080;
$selection-text-color: $text-color;

/* Scrollbar */
$scrollbar-width: 13px;

/* Wallpaper Thumbnail */
$wallpaper-thumbnail-width: <%= Wallpaper::THUMBNAIL_WIDTH %>px;
$wallpaper-thumbnail-height: <%= Wallpaper::THUMBNAIL_HEIGHT %>px;
