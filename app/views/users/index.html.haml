- title 'Users'

.row
  .col-md-9
    .panel.panel-default
      .panel-heading
        %h4 Online users
      .panel-body= render partial: 'inline_list', locals: { users: @online_users }

    .panel.panel-default
      .panel-heading
        %h4 Newest users
      - @users_group_by_day.each do |day, users|
        .panel-heading
          %h5= time_tag day, day.to_formatted_s(:long)
        .panel-body= render partial: 'inline_list', locals: { users: users }
  .col-md-3
    .panel.panel-info
      .panel-heading
        %h4 Staff
      - @staff_users.each do |role, users|
        .panel-heading
          %h5= role
        .panel-body= render partial: 'inline_list', locals: { users: users }
